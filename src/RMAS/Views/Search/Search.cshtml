@model SearchViewModel
@{
    ViewBag.Title = "Search";
    //ViewData["Title"] = "Search";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="span2">
    </div>
    <div class="span8 background-box">
        <div class="div-form">
            <h3>Search for Scheduled Event</h3>
            <form asp-controller="Search" asp-action="Search" method="post" class="form-horizontal" role="form">
                <div class="block-display">
                    <div class="block-display">
                        <label asp-for="EventName">Search by Event Name:</label> 
                        <input asp-for="EventName" class="width-double" type="search" />
                    </div>
                    <div class="block-display">And &#47; Or</div>
                    <div class="block-display">
                        <label asp-for="EventDate">Search by Date (MM/DD/YYYY):</label> 
                        <input asp-for="EventDate" type="date" />
                    </div>
                    <div class="block-display">
                        <button type="submit">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="span2">
    </div>
</div>	