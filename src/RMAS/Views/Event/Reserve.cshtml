@model RMAS.Models.Event
@{
    ViewBag.Title = "Reserve";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Event" asp-action="Reserve" method="post" class="form-horizontal" role="form">
    <div class="inline-display">
        <p>Pick a Week:</p>
        <div><input class="datePick" type="text" name="date" id="date" onfocus="this.blur();"></div>
        <div class="calendar" id="datepicker"></div>
    </div>
    <div class="block-display">
        <div class="inline-display">
            <label for="roomType">Room Type:</label>
            <select name="roomType" id="roomType" onchange="getRooms(this.value)">
                <option value="">Select Type</option>
                <option value="Conference">Conference</option>
                <option value="Lab">Lab</option>
                <option value="Class">Class</option>
                <option value="Office">Office</option>
            </select>
        </div>
        <div class="inline-display">
            <label for="roomNumber">Room Number:</label>
            <select name="roomNumber" id="roomNumber"></select>
        </div>
    </div>		
    <div class="block-display" id="days-align">
        <p>Select Days to Reserve:</p>
        <div class="chkboxes"><label for="sun">Sun</label> <input class="chkwidth" type="checkbox" name="sun" id="sun" value=""></div>
        <div class="chkboxes"><label for="mon">Mon</label> <input class="chkwidth" type="checkbox" name="mon" id="mon" value=""></div>
        <div class="chkboxes"><label for="tues">Tues</label> <input class="chkwidth" type="checkbox" name="tues" id="tues" value=""></div>
        <div class="chkboxes"><label for="wed">Wed</label> <input class="chkwidth" type="checkbox" name="wed" id="wed" value=""></div>
        <div class="chkboxes"><label for="thur">Thur</label> <input class="chkwidth" type="checkbox" name="thur" id="thur" value=""></div>
        <div class="chkboxes"><label for="fri">Fri</label> <input class="chkwidth" type="checkbox" name="fri" id="fri" value=""></div>
        <div class="chkboxes"><label for="sat">Sat</label> <input class="chkwidth" type="checkbox" name="sat" id="sat" value=""></div>
    </div>
    <div class="block-display">
        <div class="inline-display">
            <label for="beginTime">Begin Time:</label> <select name="beginTime" id="beginTime" >
                <option value="">Select Time</option>
                <option value="7:00">7:00am</option>
                <option value="8:00">8:00am</option>
                <option value="9:00">9:00am</option>
                <option value="10:00">10:00am</option>
                <option value="11:00">11:00am</option>
                <option value="12:00">12:00pm</option>
                <option value="13:00">1:00pm</option>
                <option value="14:00">2:00pm</option>
                <option value="15:00">3:00pm</option>
                <option value="16:00">4:00pm</option>
                <option value="17:00">5:00pm</option>
                <option value="18:00">6:00pm</option>
                <option value="19:00">7:00pm</option>
            </select>
        </div>
        <div class="inline-display">
            <label for="endTime">End Time:</label> <select name="endTime" id="endTime" >
                <option value="">Select Time</option>
                <option value="8:00">8:00am</option>
                <option value="9:00">9:00am</option>
                <option value="10:00">10:00am</option>
                <option value="11:00">11:00am</option>
                <option value="12:00">12:00pm</option>
                <option value="13:00">1:00pm</option>
                <option value="14:00">2:00pm</option>
                <option value="15:00">3:00pm</option>
                <option value="16:00">4:00pm</option>
                <option value="17:00">5:00pm</option>
                <option value="18:00">6:00pm</option>
                <option value="19:00">7:00pm</option>
                <option value="20:00">8:00pm</option>
            </select>
        </div>
        <div class="block-display"><label for="event">Event Name:</label> <input class="width-double" type="text" name="event" id="event" /></div>
        <div id="submit-button"><input type="submit" value="Reserve" name="submit" id="submit" /></div>
    </div>									






        <div class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Url" class="col-md-2 control-label"></label>*@
                <div class="col-md-10">
                    @*<input asp-for="Url" class="form-control" />*@
                    @*<span asp-validation-for="Url" class="text-danger"></span>*@
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
</form>

@section Scripts {
    <script src="~/js/datefunctions.js"></script>
}