@model ReserveViewModel
@{
ViewBag.Title = "Reserve";
//ViewData["Title"] = "Reserve";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Reserve" asp-action="Reserve" method="post" class="form-horizontal" role="form">
    <div class="inline-display">
        <p>Pick a Week:</p>
        <div><input class="datePick" type="text" name="date" id="date" onfocus="this.blur();"></div>
        <div class="calendar" id="datepicker"></div>
    </div>
    <div class="block-display">
        <div class="inline-display">
            <label for="RoomType">Room Type:</label>
            <select id="RoomType" asp-items="Model.RoomTypes" >
                <option value=""></option>
            </select>
        </div>
        <div class="inline-display">
            <label asp-for="RoomNumber">Room Number:</label>
            <select asp-for="RoomNumber"></select>
        </div>
    </div>
    <div class="block-display" id="days-align">
        <p>Select Days to Reserve:</p>
        @foreach (var day in Model.DaysOfWeek)
        {
            <div class="chkboxes">
                <label>
                    <input class="chkwidth" type="checkbox" name="Dates" id="@day.Text">@day.Text
                </label>
            </div>
        }   
    </div>
    <div class="block-display">
        <div class="inline-display">
            <label asp-for="BeginTime">Begin Time:</label>
            <select asp-for="BeginTime" id="RoomType" asp-items="Model.BeginTimeList">
                <option value="">Select Time</option>
            </select>
        </div>
        <div class="inline-display">
            <label asp-for="EndTime">End Time:</label>
            <select asp-for="EndTime" id="RoomType" asp-items="Model.EndTimeList">
                <option value="">Select Time</option>
            </select>
        </div>
        <div class="block-display">
            <label asp-for="EventName">Event Name:</label> 
            <input asp-for="EventName" class="width-double" type="text" />
        </div>
        <div id="submit-button"><button type="submit">Reserve</button></div>
    </div>





    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            @*<label asp-for="Url" class="col-md-2 control-label"></label>*@
            <div class="col-md-10">
                @*<input asp-for="Url" class="form-control" />*@
                @*<span asp-validation-for="Url" class="text-danger"></span>*@
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/js/datefunctions.js"></script>
}
